@model IEnumerable<Prova_UCDB.Models.Pedido>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar produto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomePedido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataVencimento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr style='background-color: @(item.DataVencimento < DateTime.Now ?"#ba2222" : item.DataVencimento == DateTime.Now 
                                            || item.DataVencimento < DateTime.Now.AddDays(3)? "yellow" : "green");'> 
    <td class="textStyle">
        @Html.DisplayFor(modelItem => item.NomePedido)
    </td>
    <td class="textStyle">
        @Html.DisplayFor(modelItem => item.Valor)
    </td>
    <td class="textStyle">
        @Html.DisplayFor(modelItem => item.DataVencimento)
    </td>
    <td class='bold'>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
        @Html.ActionLink("Desconto", "Desconto", new { id = item.Id })
    </td>
</tr>
}

</table>
