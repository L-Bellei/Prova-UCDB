@model IEnumerable<Prova_UCDB.Models.Pedido>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Pedidos</h2>

<p class="textStyle btn btn-default">
    @Html.ActionLink("Inserir Pedido", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomePedido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)  
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataVencimento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr style='background-color: @(item.DataVencimento < DateTime.Now ?"#f51313" : item.DataVencimento == DateTime.Now
                                            || item.DataVencimento < DateTime.Now.AddDays(3)? "#FFFF00" : "azure");'>
    <td class="textStyle">
        @Html.DisplayFor(modelItem => item.NomePedido)
    </td>
    <td class="textStyle">
        @Html.DisplayFor(modelItem => item.Valor)
    </td>
    <td class="textStyle">
        @Html.DisplayFor(modelItem => item.DataVencimento)
    </td>
    <td class="textStyleForButtons" >
        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Detailhes", "Details", new { id = item.Id }) |
        @Html.ActionLink("Excluir", "Delete", new { id = item.Id }) |
        @Html.ActionLink("Desconto", "Desconto", new { id = item.Id })
    </td>
</tr>
}
</table>
<footer>
    <p class="textStyle">Legenda:</p>  
    <p class="textStyle corVencido">Pedidos Atrasados</p>
    <p class="textStyle corQuaseVencido">Pedidos proximos do vencimento</p>
</footer>