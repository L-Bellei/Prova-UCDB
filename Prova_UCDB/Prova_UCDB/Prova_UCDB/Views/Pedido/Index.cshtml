@model IEnumerable<Prova_UCDB.Models.Pedido>

@{
    ViewBag.Title = "Index";
}

<h2 class="textStyle text-center" style="font-size: 70px; padding-bottom: 50px ">Lista de Pedidos</h2>

<p class="textStyle" style="margin-bottom: 15px">
    <button type="button" class="btn btn-light">
        @Html.ActionLink("Inserir Pedido", "Create")
    </button>
</p>
<table class="table" style="border-style: groove">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomePedido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)  
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataVencimento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr style='background-color: @(item.DataVencimento < DateTime.Now ?"#f51313" : item.DataVencimento == DateTime.Now
                                            || item.DataVencimento < DateTime.Now.AddDays(3)? "#FFFF00" : "#5dd05b");'>
    <td class="textStyle">
        @Html.DisplayFor(modelItem => item.NomePedido)
    </td>
    <td class="textStyle">
        @Html.DisplayFor(modelItem => item.Valor)
    </td>
    <td class="textStyle">
        @Html.DisplayFor(modelItem => item.DataVencimento)
    </td>
    <td class="textStyle">
        <button type="button" class="btn btn-light">
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) ||
            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) ||
            @Html.ActionLink("Desconto", "Desconto", new { id = item.Id })
        </button>
        <button type="button" class="btn btn-danger">
            @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
        </button>
    </td>
</tr>
}
</table>
<footer style="padding-top: 150px">
    <p class="textStyle">Legenda:</p>  
    <p class="textStyle corVencido">Pedidos Atrasados</p>
    <p class="textStyle corQuaseVencido">Pedidos proximos do vencimento</p>
    <p class="textStyle emdia">Pedidos em dia</p>
</footer>